<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"

    android:layout_marginTop="16dp"
    android:background="@drawable/rounded_corner_bacgkround_white"
    android:backgroundTint="#FFF4F7"
    android:elevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/schoolNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/lightBlack"
        android:text="DAV Public School, Vidyanagar - Delhi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginLeft="16dp"

        />

    <TextView
        android:id="@+id/classNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Class 5"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/schoolNameTv"
        app:layout_constraintTop_toBottomOf="@+id/schoolNameTv"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/statusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Request Sent"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/classNameTv" />



</androidx.constraintlayout.widget.ConstraintLayout>